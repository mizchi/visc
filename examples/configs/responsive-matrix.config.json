{
  "baseUrl": "https://example.com",
  "snapshotDir": "./snapshots",
  "playwright": {
    "browser": "chromium",
    "headless": true
  },
  "comparison": {
    "threshold": 0.1,
    "generateDiff": true,
    "diffDir": "./diffs"
  },
  "responsiveMatrix": {
    "enabled": true,
    "viewports": [
      {
        "name": "mobile-small",
        "width": 320,
        "height": 568,
        "deviceScaleFactor": 2
      },
      {
        "name": "mobile",
        "width": 375,
        "height": 667,
        "deviceScaleFactor": 2
      },
      {
        "name": "tablet",
        "width": 768,
        "height": 1024,
        "deviceScaleFactor": 2
      },
      {
        "name": "desktop",
        "width": 1280,
        "height": 720
      },
      {
        "name": "desktop-wide",
        "width": 1920,
        "height": 1080
      }
    ],
    "breakpoints": [
      {
        "name": "mobile",
        "maxWidth": 767
      },
      {
        "name": "tablet",
        "minWidth": 768,
        "maxWidth": 1023
      },
      {
        "name": "desktop",
        "minWidth": 1024
      }
    ],
    "strictness": "normal",
    "cssSimilarityThreshold": 0.85
  },
  "urls": [
    {
      "name": "home",
      "url": "/",
      "waitFor": {
        "networkIdle": true
      }
    },
    {
      "name": "about",
      "url": "/about",
      "waitFor": {
        "networkIdle": true
      }
    },
    {
      "name": "contact",
      "url": "/contact",
      "waitFor": {
        "networkIdle": true
      }
    }
  ]
}