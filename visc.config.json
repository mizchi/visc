{
  "$schema": "./schema.json",
  "version": "1.0",
  "viewports": {
    "mobile": {
      "name": "Mobile",
      "width": 375,
      "height": 667,
      "deviceScaleFactor": 2
    },
    "desktop": {
      "name": "Desktop",
      "width": 1280,
      "height": 800,
      "deviceScaleFactor": 1
    }
  },
  "screenshotOptions": {
    "fullPage": false,
    "format": "jpeg",
    "quality": 70,
    "cacheDir": ".visc/cache/screenshots"
  },
  "captureOptions": {
    "waitUntil": "networkidle2",
    "waitForLCP": true,
    "timeout": 30000
  },
  "testCases": [
    {
      "id": "example",
      "url": "https://example.com"
    },
    {
      "id": "github",
      "url": "https://github.com"
    }
  ]
}
