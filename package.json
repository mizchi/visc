{
  "name": "@mizchi/visual-checker",
  "version": "0.1.0",
  "description": "Visual regression testing framework for web applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/mizchi/visual-checker.git"
  },
  "main": "dist/index.js",
  "bin": {
    "visual-checker": "dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && tsdown && npx tsx --build src/cli.ts -o dist/cli.js || npx esbuild src/cli.ts --bundle --platform=node --format=esm --outfile=dist/cli.js --external:puppeteer --external:chalk --external:ora --external:commander",
    "build:watch": "tsdown --watch",
    "dev": "tsdown --watch",
    "test": "npm run build && node dist/cli.js test",
    "update-snapshots": "npm run build && node dist/cli.js update",
    "compare": "npm run build && node dist/cli.js compare",
    "extract": "npm run build && tsx examples/layout/extract-layout-refactored.ts",
    "viewer": "npx http-server examples -o fixtures/layout-viewer.html",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest",
    "test:all": "npm run test:unit && npm run test:layout",
    "stability-check": "npm run build && tsx examples/layout/layout-stability-check.ts",
    "test:proxy": "npm run build && vitest tests/proxy/",
    "proxy:dev": "cd cloudflare-proxy && npm run dev",
    "proxy:setup": "cd cloudflare-proxy && npm install"
  },
  "keywords": [
    "visual-regression",
    "testing",
    "snapshot"
  ],
  "author": "mizchi",
  "license": "MIT",
  "homepage": "https://github.com/mizchi/visual-checker#readme",
  "bugs": {
    "url": "https://github.com/mizchi/visual-checker/issues"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.22",
    "@mizchi/readability": "^0.7.7",
    "ai": "^4.3.19",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.4",
    "@vitest/ui": "^1.6.1",
    "happy-dom": "^18.0.1",
    "jsdom": "^23.2.0",
    "knip": "^5.62.0",
    "rolldown-plugin-dts": "^0.14.2",
    "tsdown": "^0.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  }
}
