{
  "name": "@mizchi/visc",
  "version": "0.2.7",
  "description": "Visual regression testing CLI tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/mizchi/visc.git"
  },
  "main": "dist/index.js",
  "bin": {
    "visc": "dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && tsdown && (npx esbuild src/cli/cli.ts --bundle --platform=node --format=esm --outfile=dist/cli.js --external:puppeteer --external:chalk --external:ora --external:commander)",
    "build:cli": "npx esbuild src/cli/cli.ts --bundle --platform=node --format=esm --outfile=dist/cli.js --external:puppeteer --external:chalk --external:ora --external:commander",
    "build:watch": "tsdown --watch",
    "test:patterns": "tsx tests/test-patterns.ts",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "generate:schema": "tsx scripts/generate-schema.ts",
    "check-visc": "tsx scripts/check-visc.ts"
  },
  "keywords": [
    "visual-regression",
    "testing",
    "snapshot"
  ],
  "author": "mizchi",
  "license": "MIT",
  "homepage": "https://github.com/mizchi/visc#readme",
  "bugs": {
    "url": "https://github.com/mizchi/visc/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ora": "^8.0.1",
    "puppeteer": "^24.15.0",
    "react": "^18.2.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@vitest/ui": "^1.6.1",
    "happy-dom": "^18.0.1",
    "jsdom": "^23.2.0",
    "knip": "^5.62.0",
    "rolldown-plugin-dts": "^0.14.2",
    "tsdown": "^0.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "files": [
    "dist",
    "schema.json"
  ]
}
