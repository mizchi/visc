{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "snapshots",
    "src/layout/node_modules",
    "src/layout/examples",
    "src/layout/snippets",
    "src/layout/**/*.test.ts",
    "src/layout/demo.ts"
  ]
}
